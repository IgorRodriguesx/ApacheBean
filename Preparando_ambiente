# Consultar vers천es

python --version
pip --version

# Criando reposit처rio para colocar os arquivo

mkdir alura-curso-beam

# Pesquisando o diret처rio criado e entrando 

ls
cd alura-curso-beam

# Criando ambiente virtual com o nome -> Beam

python3 -m venv env-beam

# Ativando ambiente virtual

source env/bin/activate

# Instalando Apache Bean no ambiente

pip install apache-beam

# Entrando no ambiente interativo do python e verificando vers찾o do apache beam instalada

python
import apache_beam
print(apache_beam.__version__)

# Desativar ambiente Virtual

Deactivate


